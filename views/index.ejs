<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Blog</title>
    <link rel="stylesheet" href="/styles/main.css" />
  </head>

  <body>
    <div class="navbar">
      <a href="/" class="logo">My Blog</a>
      <a href="/new" id="newPostBtn">New Post</a>
    </div>

    <div class="container">
      <h1>Blog Posts</h1>
      <ul id="postsList">
        <% posts.forEach(post => { %>
        <li class="post-card">
          <h2><%= post.title %></h2>
          <small><%= post.date %> | By: <%= post.author %></small>
          <p><%= post.content %></p>
          <div class="post-actions">
            <a class="edit" href="/edit/<%= post.id %>">Edit</a>
            <a class="delete" href="/api/posts/delete/<%= post.id %>">Delete</a>
          </div>
        </li>
        <% }); %>
      </ul>
    </div>
  </body>
</html>
